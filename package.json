{
  "name": "@concero/operator-utils",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "npm run build && npm run build:cjs",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=dist/index.mjs --format=esm",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --format=cjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "lint": "eslint --config .eslint.config.mjs",
    "format": "prettier --config .prettierrc.json --write **/*.{ts,json}",
    "check-updates": "npx npm-check-updates"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.10.0",
    "viem": "^2.33.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
